= content_for :header do
  - if action_name == "index"
    = t('navigations.project.project_list')
  - else
    = t('navigations.project.latest_projects')    

= content_for :side_bar do
  - if action_name == "recent"
    = render :partial => "layouts/static_side_bar", :locals => {:page => "news"}
  - else
    = render :partial => "layouts/side_bar"
#body_content_left
  %table
    %tr
      %th= t('helpers.label.project.title')
      %th= t('helpers.label.project.project_status')
      %th= t('helpers.label.project.owner')
      %th= t('helpers.label.project.created')
    - @projects.each do |project|
      %tr
      -unless project.title.blank?
        %td= link_to project.title, project
      -else
        %td= link_to "no title", project
      %td= project.project_status.titlecase
      %td= project.user.username
      %td= nice_time project.created_at
      - if current_user && current_user.can_edit_project?(project)
        %td= link_to t('general_ui.destroy'), project_path(project), :confirm => t('general_ui.are_you_sure'), :method => :delete
        - if current_user.admin?
          %td= link_to t('helpers.label.project.manage_members'), project_members_path(project)

    %tr
      %td.pagination_wrapper{colspan: 7}
        =will_paginate @projects
%br/
