<!DOCTYPE html>
<%= render :partial => "/refinery/html_tag" %>
  <%= render :partial => "/refinery/admin/head" %>
  <body class='login <%= I18n.locale %>'>
    <div id='tooltip_container'></div>
    <header>
      <h1><%= yield :header %></h1>
    </header>
    <div id="page_container">
      <div id="page">
        <div id="content" class="clearfix">
          <div id="flash_container">
            <%= render :partial => "/refinery/message" %>
          </div>
          <%= yield %>
        </div>
      </div>
      <div style="margin-top:10px; float:right">
        <%= link_to I18n.t(:forgot_password, :scope => 'refinery.sessions.new'), main_app.new_refinery_user_password_path %> |
        <%= link_to I18n.t(:sign_up, :scope => 'refinery.users.new'), main_app.new_refinery_user_registration_path %> |
        <%= link_to I18n.t(:sign_in, :scope => 'refinery.sessions.new'), main_app.new_refinery_user_session_path %>
      </div>
    </div>
  </body>
</html>
