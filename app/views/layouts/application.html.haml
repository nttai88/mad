!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title= content_for?(:title) ? yield(:title) : Refinery::Core.site_name
    / Included CSS Files
    = stylesheet_link_tag "application"
    / Included JS Files
    = javascript_include_tag "application"
    = render :partial => '/refinery/html_tag'
    - site_bar = render(:partial => '/refinery/site_bar', :locals => {:head => true})
    = render :partial => '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/
    = yield :javascripts
    = render '/shared/google_ads_header'
    = csrf_meta_tags
  %body
    / Main Wrapper
    #main-wrappper
      #main-holder-1
        / Header
        #header
          #top_menu
            = render :partial => "shared/top_menu"
          #logo
            %img{:alt => "logo", :height => "133", :src => "/assets/logo_beta.jpg", :width => "551"}
        / Header
        / Main Menu
        #main_menu
          = render :partial => "refinery/menu"
        / Main Menu
      %center.banner-top
        %img{:alt => "", :src => "/assets/madLab-banner.png"}
      #content-area
        #content-wrapper
          #inner-content-wrapper
            / Left Content
            #left-colmmn-wrapper.fl_left
              .content-header
                - if action_name != "home"
                  %h2.heading
                    = yield :header
                    %br
                      %span.project-title= yield :title
              #flash-message
                = render :partial => '/refinery/message'
              .clear_fix
              .inner-content-block
                = yield
            / /left Content
            / Right Content
            #right-column-wrapper.fl_right
              = yield :side_bar
              = yield :under_side_bar
              / /Right Content
            / inner-content-wrapper
          / content-wrapper
        .banner-top.banner-bottom
          = render 'shared/google_ads_footer'
        .clear_fix
        / /Content holder
        / Footer
        #footer-wrapper
          = render "refinery/footer"
        / /Footer
      / /Main Wrapper