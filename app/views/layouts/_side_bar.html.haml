#menu_vert
  - if current_user
    %ul
      %li= link_to "Overview", "/my-page"
      %li
        = link_to "Messages", "#", :class => "mnu-parent"
        %ul{:style => (controller_name == "messages" ? "" :"display:none"), :class => "mnu-child"}
          %li= link_to "Compose", messaging.new_message_path
          %li= link_to "Inbox", messaging.messages_path(:box => 'inbox')
          %li= link_to "Sent", messaging.messages_path(:box => 'sent')
          %li= link_to "Trash", messaging.messages_path(:box => 'trash')
      %li
        = link_to "Projects", "#", :class => "mnu-parent"
        %ul{:style => (controller_name == "projects" ? "" :"display:none"), :class => "mnu-child"}
          %li= link_to "#{(current_user.projects.length == 1 ? "Project" : "Projects")} (#{current_user.projects.count})", main_app.projects_path
          %li= link_to "New project", main_app.new_project_path
      %li= link_to "Personal settings", main_app.edit_refinery_user_url(current_refinery_user)
      %li= link_to "Logout", main_app.destroy_refinery_user_session_url